<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.metron.coin.base.BindClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar_black_fragment" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="账号注册"
                android:textColor="#15233E"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/icRegionCN"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_marginTop="148dp"
                android:src="@drawable/ic_region_cn" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="146dp"
                android:layout_toRightOf="@+id/icRegionCN"
                android:src="@drawable/ic_arrow_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="144dp"
                android:gravity="center"
                android:text="+86"
                android:textColor="#15233E"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="136dp"
                android:layout_marginRight="28dp"
                android:layout_toLeftOf="@+id/icClear"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="填写手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="#15233E"
                android:textColorHint="#A0A7B3"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="178dp"
                android:background="#E8E9EC" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetCode"
                style="@style/BtnBLue"
                android:layout_marginTop="218dp"
                android:enabled="false"
                android:onClick="@{handler.click}"
                android:text="获取验证码" />


        </RelativeLayout>

    </LinearLayout>

</layout>